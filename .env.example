# Alpaca API credentials (recommended for beginners - free paper trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=True  # Set to False for live trading

# Polygon.io API (for additional market data)
POLYGON_API_KEY=your_polygon_api_key_here

# Trading configuration
INITIAL_CAPITAL=10000.00
MAX_POSITION_SIZE=0.1  # Maximum 10% of portfolio per position
MAX_DAILY_LOSS=0.02  # Stop trading if down 2% for the day
RISK_PER_TRADE=0.01  # Risk 1% per trade

# Trading preferences
TRADING_MODE=paper  # paper or live
STRATEGY=momentum  # momentum, mean_reversion, ml_hybrid
WATCHLIST=AAPL,MSFT,GOOGL,TSLA,NVDA,AMD,META,AMZN

# Risk management
USE_STOP_LOSS=True
STOP_LOSS_PCT=0.02  # 2% stop loss
USE_TAKE_PROFIT=True
TAKE_PROFIT_PCT=0.04  # 4% take profit

# Scheduling
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=45
